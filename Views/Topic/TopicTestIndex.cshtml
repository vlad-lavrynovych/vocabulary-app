@model vocabulary_app.Models.Topic

@{
    ViewData["Title"] = "TopicTestIndex";
}

<h1>Test</h1>
<form asp-action="TopicTestResult">
    <table class="table table-dark  table-striped">
        <thead>
            <tr>
                <th>
                    Original Value
                </th>
                <th style="width:50%">
                    Input Translation
                </th>
            </tr>
        </thead>
        <tbody>
            @{int i = 0;}
            @foreach (Word word in ViewBag.Words)
            {
                <tr>
                    <td>
                        @word.OriginalValue
                    </td>
                    <td style="width:50%">
                        <input name="WordTestAnswers[@i].Translation" class="form-control" />
                        <input type="hidden" name="WordTestAnswers[@i].WordId" value="@word.Id" />
                    </td>
                </tr>
                i++;
            }
        </tbody>
    </table>
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-lg btn-success">Submit</button>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
