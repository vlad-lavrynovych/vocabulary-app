@model IEnumerable<vocabulary_app.Models.Topic>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-dark  table-striped">
    <thead>
        <tr>
            <th>
                User
            </th>
            <th>
                UserId
            </th>
            <th>
                Name
            </th>
            <th>
                Edit
            </th>
            <th>
                Delete
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in ViewBag.Topics) {
        <tr>
            <td>
                @item.Id
            </td>
            <td>
                <!-- N/A value-->
                @(item.UserId==null?"-":@item.UserId)
            </td>
            <td>
                @item.Name
            </td>
            <td>
                <button class="btn btn-warning"><a class="text-secondary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> </button>
                
            </td>
            <td>
                <button class="btn btn-danger"><a  class="text-white" asp-action="Delete" asp-route-id="@item.Id">Delete</a> </button>
            </td>
        </tr>
}
    </tbody>
</table>
